{% extends 'base.html.twig' %}

{% block title %}{{ auteur.id ? 'Modifier' : 'Nouvel' }} auteur{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1 class="h3 mb-0">{{ auteur.id ? 'Modifier' : 'Nouvel' }} auteur</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.date_de_naissance, 'Date de naissance', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date_de_naissance, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date_de_naissance) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.biographie, 'Biographie', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.biographie, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            {{ form_errors(form.biographie) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_admin_auteurs') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour à la liste
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>
                                {{ auteur.id ? 'Mettre à jour' : 'Créer' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 