{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe - Bibliothèque{% endblock %}

{% block body_style %}background-color: #f5f1e8;{% endblock %}
{% block body_class %}homepage{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h1 class="h3 text-center mb-4">Réinitialiser le mot de passe</h1>

                    {% for flash_error in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">
                            {{ flash_error }}
                        </div>
                    {% endfor %}

                    <form method="post">
                        <input type="hidden" name="token" value="{{ token }}">

                        <div class="mb-3">
                            <label for="new_password" class="form-label">Nouveau mot de passe</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" id="new_password" name="new_password" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">Confirmer le mot de passe</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input type="password" class="form-control" id="confirm_password" name="confirm_password" required>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-dark" type="submit">
                                <i class="fas fa-key me-2"></i>Réinitialiser le mot de passe
                            </button>
                            <a href="{{ path('app_login') }}" class="btn btn-link">
                                <i class="fas fa-arrow-left me-2"></i>Retour à la connexion
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 